@model List<ShopQuanAo.Models.ProductCategoryDto>
<!-- Menu Responsive -->
<div class="menu">
    <div class="menu-header">
        <nav class="navbar">
            <a class="navbar-brand" href="#">
                Menu
            </a>
            <i class="fa-solid fa-arrow-left" style="font-size: 20px; margin-right: 10px;"></i>
        </nav>
    </div>
    <div class="menu-body">
        <span>
            <a class="menu-titel" href="#">Trang chủ</a>
            <div class="dropdown-divider"></div>
        </span>
        <div>
            <span><a class="menu-titel" href="">Sản phẩm</a></span>
            @{
                int colSize = 3;
                int numCol = Model.Count / colSize;
                if (Model.Count % colSize > 0) { numCol++; }

            }
            @for (int i = 0; i < numCol; i++)
            {
                var lstColData = Model.Skip(i * colSize).Take(colSize);
                <ul class="list-gr">
                    <div class="dropdown-divider"></div>
                    <li class="list-gr-item list-gr-item-header "> <a>Áo khoác mỏng</a></li>
                    @foreach (var cate in lstColData)
                    {
                        <div class="dropdown-divider"></div>
                        <li class="list-gr-item"> <a href="@Url.Action("Index","ProductCategory", new {idCategory = cate.id})">@cate.name</a></li>
                    }
                </ul>
            }

           
        </div>
        <div class="dropdown-divider"></div>
        <span class="menu-titel">Khuyến mãi</span>
        <div>
            <div class="dropdown-divider"></div>
            <span class="menu-titel">Kiến Thức</span>
            <ul class="list-gr">
                <div class="dropdown-divider"></div>
                <li class="list-gr-item"> <a>Áo khoác mỏng</a></li>
                <div class="dropdown-divider"></div>
                <li class="list-gr-item"> <a>Áo chống nắng nam</a></li>
                <div class="dropdown-divider"></div>
                <li class="list-gr-item"> <a>Áo khoác gió nam</a></li>
                <div class="dropdown-divider"></div>
                <li class="list-gr-item"> <a>Áo khoác gió nam</a></li>
                <div class="dropdown-divider"></div>

            </ul>
        </div>
        <div class="dropdown-divider"></div>
        <span class="menu-titel">Góc review</span>
        <div>
            <div class="dropdown-divider"></div>
            <span class="menu-titel">Giới thiệu</span>
            <ul class="list-gr">
                <div class="dropdown-divider"></div>
                <li class="list-gr-item"> <a>Áo khoác mỏng</a></li>
                <div class="dropdown-divider"></div>
                <li class="list-gr-item"> <a>Áo chống nắng nam</a></li>
                <div class="dropdown-divider"></div>
                <li class="list-gr-item"> <a>Áo khoác gió nam</a></li>
                <div class="dropdown-divider"></div>
                <li class="list-gr-item"> <a>Áo khoác gió nam</a></li>
                <div class="dropdown-divider"></div>


            </ul>
        </div>
    </div>
</div>
<!-- End Menu Responsive -->
