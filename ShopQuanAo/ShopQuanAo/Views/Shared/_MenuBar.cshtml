    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <nav class="navbar">
                    <a class="navbar-brand" href="@Url.Action("Index","Home")">
                        <img class="img-dc" src="https://aothudong.com/theme/aothudong/img/logo.png">
                    </a>
                </nav>
            </div>
            <i class="fa-solid fa-bars icon-menu"></i>
            <a class="cart" href="@Url.Action("Index", "Cart", new {idUser = Session["idUser"]})">
                <i class="fa-solid fa-cart-shopping" style="cursor: pointer;">
                    <span class="cart-num">1</span>
                </i>
            </a>
            <div class="col-md-9 nav-list">
                <ul class="nav justify-content-center">
                    <li class="nav-item">
                        <a class="nav-link active" href="#"><b>TRANG CHỦ</b></a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link" href="#"><b>SẢN PHẨM</b></a>
                        <div class="dropdown-content">
                            @for (int i = 0; i < numCol; i++){

                                        var listColData = Model.Skip(i * colSize).Take(colSize);
                            <div>
                                <a class="dropdown-item item-title" href="#"><b>Áo Khoác Mỏng</b></a>
